extends ../layout

block content
  .page-header
    h3 Request a new Service to add to Vgilant

  form.form-horizontal(role='form', method='POST', ng-controller="NewServiceController as ctrl")
    // input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') Service name
      .col-sm-8
        input.form-control(type='text', name='name', id='name', autofocus=true, value="{{ ctrl.NewServiceName }}")
    .form-group
      label(class='col-sm-2 control-label', for='message') Describe the service in a few words
      .col-sm-8
        textarea.form-control(type='text', name='message', id='message', rows='7')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-plus-square
          | Submit